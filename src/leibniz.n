import syscall
import fs
import strings
import fmt

fn main() {
    var f = fs.open('./rounds.txt', syscall.O_RDONLY, 0).content()
    var rounds = f.trim([' ', '\n']).to_int()
    var x = 1.0
    var pi = 1.0
    int stop = rounds + 2

    for int i = 2; i <= stop; i+=1 {
        x = -x
        pi += x / (2 * i - 1) as f64
    }

    pi *= 4.0
    fmt.printf('%0.16f', pi)
}